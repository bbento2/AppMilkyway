<?xml version="1.0" encoding="utf-8"?>
<!--ให้แอพสามารถเลื่อนขึ้นลงได้-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

<!--LinearLAyput แบบแนวตั้ง (vertical) เพื่อจัดเรียงองค์ประกอบแต่ละตัวในลำดับจากบนลงล่าง-->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Signin">

<!-- ให้ปุ่มย้อนกลับอยู่แนวนอน-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/fascinate_inline"
                android:padding="10dp"
                android:text="Sign in"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_text"/>
        </LinearLayout>

    <!--กรอก Email-->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_text2"
            android:fontFamily="@font/nerko_one"
            android:hint="Email"
            android:inputType="text"
            android:padding="11dp"
            android:textSize="24sp" />

        <!--กรอก Name-->
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_text2"
            android:fontFamily="@font/nerko_one"
            android:hint="Name"
            android:inputType="text"
            android:padding="11dp"
            android:textSize="24sp" />

        <!--กรอกอายุ-->
        <EditText
            android:id="@+id/edtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_text2"
            android:fontFamily="@font/nerko_one"
            android:hint="Age"
            android:inputType="number"
            android:padding="11dp"
            android:textSize="24sp" />

        <!--กรอกวันเกิด-->
        <EditText
            android:id="@+id/edtBD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_text2"
            android:fontFamily="@font/nerko_one"
            android:hint="Birthday"
            android:inputType="date"
            android:padding="11dp"
            android:textSize="24sp" />

        <!--Radio เลือกเพศชายหรือหญิง-->
        <RadioGroup
            android:id="@+id/radioGroupSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_text2"
            android:padding="11dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sex"
                android:fontFamily="@font/nerko_one"
                android:textSize="24sp"/>

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nerko_one"
                android:text="Male"
                android:textSize="24sp"
                android:paddingEnd="20dp" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nerko_one"
                android:text="Female"
                android:textSize="24sp"
                android:paddingEnd="20dp" />
        </RadioGroup>

        <!--กรอก Username-->
        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_text2"
            android:fontFamily="@font/nerko_one"
            android:hint="Username"
            android:inputType="text"
            android:padding="11dp"
            android:textSize="24sp" />

        <!--กรอก password-->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_text2"
            android:fontFamily="@font/nerko_one"
            android:hint="Password"
            android:inputType="text"
            android:padding="11dp"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/checkboxTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I accept the terms and conditions"
            android:textSize="18sp"
            android:fontFamily="@font/nerko_one"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:background="@drawable/custom_text2"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/margarine"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/purple"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>
